public class EventsController extends ValidationAwareSupport implements ModelDriven<Object>, Validateable {
    private Event model = new Event();
    private String id;
    private Collection<Event> list;

    private GenericManager<Event, Long> eventService = null;

    public EventsController() {

        ClassPathXmlApplicationContext appContext = new ClassPathXmlApplicationContext(
                new String[] {"applicationContext-dao.xml", "applicationContext-service.xml",
                "applicationContext-resources.xml"});


        BeanFactory factory = (BeanFactory) appContext;
        eventService = (GenericManager<Event, Long>) factory.getBean("eventManager");
    }

    // GET /events/1
    public HttpHeaders show() {
        model = eventService.get(new Long(id));
        return new DefaultHttpHeaders("show");
    }

    // GET /events
    public HttpHeaders index() {
        list = eventService.getAll();

        return new DefaultHttpHeaders("index")
            .disableCaching();
    }

    // GET /events/1/edit
    public String edit() {
        return "edit";
    }

    // GET /events/new
    public String editNew() {
        model = new Event();
        return "editNew";
    }

    // GET /events/1/deleteConfirm
    public String deleteConfirm() {
        return "deleteConfirm";
    }

    // DELETE /events/1
    public String destroy() {
        eventService.remove(new Long(id));
        addActionMessage("event removed successfully");
        return "success";
    }

    // POST /events
    public HttpHeaders create() {
        eventService.save(model);
        addActionMessage("New event created successfully");
        return new DefaultHttpHeaders("success")
            .setLocationId(model.getId());
    }

    // PUT /events/1
    public String update() {
        eventService.save(model);
        addActionMessage("event updated successfully");
        return "success";
    }

    public void validate() {
//        if (model.getClientName() == null || model.getClientName().length() ==0) {
//            addFieldError("clientName", "The client name is empty");
//        }
    }

    public void setId(String id) {
        if (id != null) {
            this.model = eventService.get(new Long(id));
        }

        this.id = id;
    }

    public Object getModel() {
        return (list != null ? list : model);
    }


}

