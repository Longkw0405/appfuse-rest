@Results({
    @Result(name="success", type="redirectAction", params = {"actionName" , "accounts"})
})
public class AccountsController extends ValidationAwareSupport implements ModelDriven<Object>, Validateable {

    private AccountType model = new AccountType();
    private String id;
    private Collection<AccountType> list;

    private GenericManager<AccountType, Long> accountTypesService = null;

    public AccountsController() {

        ClassPathXmlApplicationContext appContext = new ClassPathXmlApplicationContext(
                new String[] {"applicationContext-dao.xml", "applicationContext-service.xml",
                "applicationContext-resources.xml"});


        BeanFactory factory = (BeanFactory) appContext;
        accountTypesService = (GenericManager<AccountType, Long>) factory.getBean("accountTypeManager");
    }

    // GET /customers/1
    public HttpHeaders show() {
        model = accountTypesService.get(new Long(id));
        return new DefaultHttpHeaders("show");
    }

    // GET /customers
    public HttpHeaders index() {
        list = accountTypesService.getAll();

        return new DefaultHttpHeaders("index")
            .disableCaching();
    }

    // GET /customers/1/edit
    public String edit() {
        return "edit";
    }

    // GET /customers/new
    public String editNew() {
        model = new AccountType();
        return "editNew";
    }

    // GET /orders/1/deleteConfirm
    public String deleteConfirm() {
        return "deleteConfirm";
    }

    // DELETE /orders/1
    public String destroy() {
        accountTypesService.remove(new Long(id));
        addActionMessage("AccountType removed successfully");
        return "success";
    }

    // POST /orders
    public HttpHeaders create() {
        accountTypesService.save(model);
        addActionMessage("New accountType created successfully");
        return new DefaultHttpHeaders("success")
            .setLocationId(model.getId());
    }

    // PUT /orders/1
    public String update() {
        accountTypesService.save(model);
        addActionMessage("AccountType updated successfully");
        return "success";
    }

    public void validate() {
//        if (model.getClientName() == null || model.getClientName().length() ==0) {
//            addFieldError("clientName", "The client name is empty");
//        }
    }

    public void setId(String id) {
        if (id != null) {
            this.model = accountTypesService.get(new Long(id));
        }

        this.id = id;
    }

    public Object getModel() {
        return (list != null ? list : model);
    }

}
